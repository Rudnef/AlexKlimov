<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rudnef.p06_01_orientation.MainActivity">

    <EditText
        android:id="@+id/et_new_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@id/et_new_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/showOrientation"
        android:onClick="showOrientation"
        android:id="@+id/btn_1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вторая кнопка"
        android:onClick="showOrientation1"
        android:id="@+id/button2"
        android:layout_below="@+id/btn_1"
        android:layout_alignRight="@+id/btn_1"
        android:layout_alignEnd="@+id/btn_1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Третья кнопка"
        android:onClick="showRotation"
        android:id="@+id/btn_2"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Четвертая кнопка"
        android:id="@+id/btn_4"
        android:onClick="OnRotate"
        android:layout_below="@+id/btn_2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пятая кнопка"
        android:id="@+id/btn_5"
        android:layout_below="@+id/btn_4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Шестая кнопка"
        android:layout_below="@id/btn_5"
        android:id="@+id/bnt_6"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_1"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      />
</RelativeLayout>
